{
  "name": "ash-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "ASH (Application Security Hash) Monorepo",
  "author": "3maem | عمائم",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/ash-node-sdk",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:node",
    "build:node": "cd packages/ash-node-sdk && npm run build",
    "build:rust": "cargo build --release",
    "test": "npm run test:rust && npm run test:node",
    "test:rust": "cargo test",
    "test:node": "cd packages/ash-node-sdk && npm test",
    "lint": "npm run lint:rust && npm run lint:node",
    "lint:rust": "cargo clippy -- -D warnings",
    "lint:node": "cd packages/ash-node-sdk && npm run lint",
    "clean": "cargo clean && rm -rf packages/*/dist packages/*/node_modules",
    "conformance:all": "bash scripts/test-conformance-all.sh"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "fast-check": "^4.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
